{# Page Template - Generated by wxcode #}
{#
    Context variables:
    - page_name: Name of the page (snake_case)
    - page_title: Display title
    - original_page: Original WinDev page name
    - page_type: "form", "list", "dashboard", or "simple"
    - controls: List of control dictionaries
    - has_form: Boolean indicating if page has form
#}
{% raw %}{% extends "base.html" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="page-container" id="{{ page_name }}-container">
    {# Page header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ page_title }}</h1>
        {% block page_actions %}{% endblock %}
    </div>

    {# Page content based on type #}
    {% block page_content %}
{% endraw %}
{% if page_type == "form" %}
    {{ form_content | indent(4) }}
{% elif page_type == "list" %}
    {{ list_content | indent(4) }}
{% elif page_type == "dashboard" %}
    {{ dashboard_content | indent(4) }}
{% else %}
    {{ simple_content | indent(4) }}
{% endif %}
{% raw %}
    {% endblock %}
</div>
{% endblock %}

